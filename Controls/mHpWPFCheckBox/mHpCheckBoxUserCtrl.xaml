<UserControl x:Class="mHpWPFCheckBox.mHpCheckBoxUserCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="133" d:DesignWidth="278">
    <Grid>
        <RadioButton Content="Activé" Height="16" HorizontalAlignment="Left" Margin="12,12,0,0" Name="rdoCheck" VerticalAlignment="Top" Width="98" IsChecked="True" Click="rdoCheck_Click" />
        <RadioButton Content="Désactivé" Height="16" HorizontalAlignment="Left" Margin="12,34,0,0" Name="rdoUncheck" VerticalAlignment="Top" Width="98" Click="rdoUncheck_Click" />
        <RadioButton Content="Change d'état" Height="16" HorizontalAlignment="Left" Margin="12,56,0,0" Name="rdoUndef" VerticalAlignment="Top" Width="98" Checked="rdoUndef_Checked" />
        <Label Content="Valeur de l'état :" Height="24" HorizontalAlignment="Left" Margin="124,7,0,0" Name="label1" VerticalAlignment="Top" Width="97" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="227,9,0,0" Name="edtState" VerticalAlignment="Top" Width="32" IsEnabled="False" />
    </Grid>
</UserControl>
